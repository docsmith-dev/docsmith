{
  "name": "docsmith",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --parallel -r run dev",
    "clean": "pnpm -r clean",
    "docsmith.dev": "pnpm --filter 'docsmith.dev'",
    "core": "pnpm --filter '@docsmith/core'",
    "vite": "pnpm --filter '@docsmith/vite'",
    "react": "pnpm --filter '@docsmith/react'",
    "runtime": "pnpm --filter '@docsmith/runtime'",
    "source-github": "pnpm --filter '@docsmith/source-github'",
    "examples:react-router": "pnpm --filter 'examples-react-router'",
    "examples:astro": "pnpm --filter 'examples-astro'"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
